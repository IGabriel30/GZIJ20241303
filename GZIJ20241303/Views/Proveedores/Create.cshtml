@model GZIJ20241303.Models.Proveedor

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Proveedores</h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-5">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            
            <label asp-for="Producto" class="control-label"></label>
            <input asp-for="Producto" class="form-control" />
            <span asp-validation-for="Producto" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="FechaRegistro" class="control-label"></label>
            <input asp-for="FechaRegistro" class="form-control" />
            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="CorreoElectronico" class="control-label"></label>
            <input asp-for="CorreoElectronico" class="form-control" />
            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Telefono" class="control-label"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>

        </div>

    </div>

    <div class="row row-cols-md-12">
        @await Html.PartialAsync("_DireccionesProveedor", Model.DireccionesProveedors)
    </div>

    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-outline-dark" />
        <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
